@{
  Layout = null;
}

<!DOCTYPE html>
<html lang="en">

<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">
  <meta name="description" content="">
  <meta name="author" content="">
  <link rel="preconnect" href="https://fonts.gstatic.com">
  <link href="https://fonts.googleapis.com/css2?family=Poppins:wght@100;200;300;400;500;600;700;800;900&display=swap"
        rel="stylesheet">
  
  <!-- Bootstrap core CSS -->
  <link href="@Url.Content("~/bootstrap/css/bootstrap.min.css")" rel="stylesheet"/>

  <!-- Additional CSS Files -->
  <link rel="stylesheet" href="@Url.Content("~/css/fontawesome.css")"/>
  <link rel="stylesheet" href="@Url.Content("~/css/templatemo-space-dynamic.css")"/>
  <link rel="stylesheet" href="@Url.Content("~/css/animated.css")"/>
  <link rel="stylesheet" href="@Url.Content("~/css/owl.css")"/>
</head>

<body>

<!-- ***** Preloader Start ***** -->
<div id="js-preloader" class="js-preloader">
  <div class="preloader-inner">
    <span class="dot"></span>
    <div class="dots">
      <span></span>
      <span></span>
      <span></span>
    </div>
  </div>
</div>
<!-- ***** Preloader End ***** -->

<!-- ***** Header Area Start ***** -->
<header class="header-area header-sticky wow slideInDown" data-wow-duration="0.75s" data-wow-delay="0s">
  <div class="container">
    <div class="row">
      <div class="col-12">
        <nav class="main-nav">
          <!-- ***** Logo Start ***** -->
          <a href="index.html" class="logo">
            <h4>Z<span>ELA</span></h4>
          </a>
          <!-- ***** Logo End ***** -->
          <!-- ***** Menu Start ***** -->
          <ul class="nav">
            <li class="scroll-to-section"><a href="#top" class="active">Trang Chủ</a></li>
            <li class="scroll-to-section"><a href="#services">Dịch Vụ</a></li>
            <li class="scroll-to-section">
              <div class="main-red-button"><a href="/Account/Login">Đăng Nhập</a></div>
            </li>
          </ul>
          <a class='menu-trigger'>
            <span>Menu</span>
          </a>
          <!-- ***** Menu End ***** -->
        </nav>
      </div>
    </div>
  </div>
</header>
<!-- ***** Header Area End ***** -->

<div class="main-banner wow fadeIn" id="top" data-wow-duration="1s" data-wow-delay="0.5s">
  <div class="container">
    <div class="row">
      <div class="col-lg-12">
        <div class="row">
          <div class="col-lg-6 align-self-center">
            <div class="left-content header-text wow fadeInLeft" data-wow-duration="1s" data-wow-delay="1s">
              <h6>Chào mừng bạn đến với Web Zela - Nhóm 6</h6>
              <h2>Chúng tôi phát triển <em>Zela Chat</em> &amp; <span>Gọi Video</span> Học Tập</h2>
              <p>Zela là một nền tảng học trực tuyến hỗ trợ trò chuyện và gọi video, giúp kết nối người học một cách dễ
                dàng và hiệu quả. Dự án được xây dựng nhằm hỗ trợ học tập linh hoạt và tương tác thời gian thực.</p>

              <form id="search" method="GET" asp-action="AnalyzeSite">
                <fieldset>
                  <input type="text" name="address" class="email" placeholder="Nói gì đi các tình eeeuuuu <3"
                         autocomplete="on" required>
                </fieldset>
                <fieldset>
                  <button type="submit" class="main-button">Hỏi đi con vợ ??</button>
                </fieldset>
              </form>
            </div>
          </div>
          <div class="col-lg-6">
            <iframe
              src="https://my.spline.design/bearintheforesthoverloopanimation-KysQbtcjc6j5VzvwMdJLPyAK/"
              frameborder="0"
              width="100%"
              height="100%"
              style="pointer-events: none; display: block;">
            </iframe>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>

<div id="about" class="about-us section">
  <div class="container">
    <div class="row">
      <div class="col-lg-4">
        <div class="left-image wow fadeIn" data-wow-duration="1s" data-wow-delay="0.2s">
          <img src="@Url.Content("~/images/about-left-image.png")" alt="person graphic"/>
        </div>
      </div>
      <div class="col-lg-8 align-self-center">
        <div class="services">
          <div class="row">
            <!-- Service Items -->
            @* Repeatable structure here: Add your dynamic or static content *@
          </div>
        </div>
      </div>
    </div>
  </div>
</div>
@{
  Layout = null;
}

<div id="portfolio" class="our-portfolio section">
  <div class="container">
    <div class="row">
      <div class="col-lg-6 offset-lg-3">
        <div class="section-heading wow bounceIn" data-wow-duration="1s" data-wow-delay="0.2s">
          <h2>Khám phá Zela: <em>Gọi video</em> &amp; <span>Chat</span> hỗ trợ học tập</h2>
        </div>
      </div>
    </div>
    <div class="row">
      @foreach (var item in new[]
                  {
                    new { Title = "Call Video", Description = "Thực hiện cuộc gọi video 1-1 và nhóm mượt mà, tích hợp ghi âm, chia sẻ màn hình và quản lý người tham gia." },
                    new { Title = "Chat Real Time", Description = "Trò chuyện thời gian thực với hỗ trợ gửi media, emoji, phản hồi nhanh và lịch sử tin nhắn được lưu trữ an toàn." },
                    new { Title = "AI Support", Description = "Tích hợp AI để hiển thị phụ đề trực tiếp, dịch ngôn ngữ, tóm tắt nội dung và trả lời câu hỏi tự động trong buổi học." },
                    new { Title = "Best Study", Description = "Hỗ trợ học tập tối ưu với quiz builder, Pomodoro, bảng trắng cộng tác và đồng bộ lịch học với Google Calendar." }
                  })
      {
        <div class="col-lg-3 col-sm-6">
          <a href="#">
            <div class="item wow bounceInUp" data-wow-duration="1s" data-wow-delay="0.3s">
              <div class="hidden-content">
                <h4>@item.Title</h4>
                <p>@item.Description</p>
              </div>
              <div class="showed-content">
                <img src="@Url.Content("~/images/portfolio-image.png")" alt="Portfolio Image"/>
              </div>
            </div>
          </a>
        </div>
      }
    </div>
  </div>
</div>


<div id="contact" class="contact-us section">
  <div class="container">
    <div class="row">
      <div class="col-lg-6 align-self-center wow fadeInLeft" data-wow-duration="0.5s" data-wow-delay="0.25s">
        <div class="section-heading">
          <h2>Liên hệ với chúng tôi nếu bạn cần hỗ trợ về nền tảng học trực tuyến</h2>
          <p>Nếu bạn có bất kỳ yêu cầu nào liên quan đến hệ thống học tập, gọi video, chat thời gian thực hoặc tích hợp AI, đừng ngần ngại gửi tin nhắn cho chúng tôi.</p>
          <div class="phone-info">
            <h4>Mọi thắc mắc vui lòng gọi: 
              <span><i class="fa fa-phone"></i> <a href="#">010-020-0340</a></span>
            </h4>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>

<footer>
  <div class="container">
    <div class="row">
      <div class="col-lg-12 wow fadeIn" data-wow-duration="1s" data-wow-delay="0.25s">
        <p>&copy; Zela - 2025. 
          <br/>Design: <a rel="nofollow" href="https://templatemo.com">Kiệt Đẹp Traio</a></p>
      </div>
    </div>
  </div>
</footer>
<!-- Scripts -->
<script src="@Url.Content("~/jquery/jquery.min.js")"></script>
<script src="@Url.Content("~/bootstrap/js/bootstrap.bundle.min.js")"></script>
<script src="@Url.Content("~/js/owl-carousel.js")"></script>
<script src="@Url.Content("~/js/animation.js")"></script>
<script src="@Url.Content("~/js/imagesloaded.js")"></script>
<script src="@Url.Content("~/js/templatemo-custom.js")"></script>

</body>
</html>
