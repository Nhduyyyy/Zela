@{
    ViewData["Title"] = "Thanh toán thành công";
}

<style>
    .success-container {
        background: linear-gradient(135deg, var(--theme-primary-color) 0%, var(--theme-primary-dark) 100%);
        min-height: 100vh;
        padding: 2rem 0;
    }
    .success-card {
        background: rgba(255,255,255,0.05);
        border: 2px solid var(--theme-accent-green);
        border-radius: 20px;
        box-shadow: var(--theme-shadow-neon);
        backdrop-filter: blur(10px);
        overflow: hidden;
        transition: all 0.3s;
    }
    .success-icon {
        font-size: 4rem;
        color: var(--theme-accent-green);
        text-shadow: var(--theme-shadow-neon);
    }
    .success-title {
        background: linear-gradient(45deg, var(--theme-accent-green), var(--theme-accent-green-alt));
        -webkit-background-clip: text;
        -webkit-text-fill-color: transparent;
        background-clip: text;
        font-weight: 800;
        font-size: 2.5rem;
        margin-bottom: 1rem;
        text-shadow: var(--theme-shadow-neon);
    }
    .success-alert {
        background: rgba(0,240,181,0.1);
        border: 1px solid var(--theme-status-online);
        color: var(--theme-status-online);
        border-radius: 15px;
        padding: 1rem 1.5rem;
        margin-bottom: 1.5rem;
    }
    .success-btn {
        background: linear-gradient(45deg, var(--theme-accent-green), var(--theme-accent-green-alt));
        border: none;
        border-radius: 15px;
        padding: 0.75rem 1.5rem;
        font-weight: 600;
        font-size: 1.1rem;
        transition: all 0.3s;
        text-transform: uppercase;
        letter-spacing: 0.5px;
        color: #fff;
    }
    .success-btn-outline {
        background: transparent;
        border: 2px solid var(--theme-accent-green);
        color: var(--theme-accent-green);
    }
    .success-btn-outline:hover {
        background: var(--theme-accent-green);
        color: var(--theme-text-dark);
    }
    .success-btn:hover {
        box-shadow: var(--theme-shadow-neon);
        background: linear-gradient(45deg, var(--theme-accent-green-alt), var(--theme-accent-green));
    }
</style>

<div class="container mt-5">
    <div class="row justify-content-center">
        <div class="col-md-8 col-lg-6">
            <div class="card border-success shadow-lg">
                <div class="card-body text-center p-5">
                    <div class="mb-4">
                        <i class="bi bi-check-circle-fill text-success" style="font-size: 4rem;"></i>
                    </div>
                    
                    <h2 class="card-title text-success mb-3">Thanh toán thành công!</h2>
                    
                    @if (ViewBag.OrderCode != null)
                    {
                        <div class="alert alert-info mb-3">
                            <strong>Mã đơn hàng:</strong> @ViewBag.OrderCode<br>
                            <strong>Trạng thái:</strong> @ViewBag.PaymentStatus<br>
                            <strong>Số tiền:</strong> @ViewBag.Amount?.ToString("N0") VNĐ
                        </div>
                    }
                    
                    <p class="card-text text-muted mb-4">
                        Cảm ơn bạn đã nâng cấp lên gói Premium. Tài khoản của bạn đã được kích hoạt ngay lập tức.
                    </p>
                    
                    <div class="alert alert-success">
                        <h5><i class="bi bi-crown me-2"></i>Chào mừng bạn đến với Zela Premium!</h5>
                        <p class="mb-0">Bây giờ bạn có thể tận hưởng tất cả tính năng cao cấp của chúng tôi.</p>
                    </div>
                    
                    <div class="row mt-4">
                        <div class="col-6">
                            <a href="@Url.Action("Index", "Home")" class="btn btn-outline-primary w-100">
                                <i class="bi bi-house me-2"></i>Về trang chủ
                            </a>
                        </div>
                        <div class="col-6">
                            <a href="@Url.Action("History", "Payment")" class="btn btn-primary w-100">
                                <i class="bi bi-clock-history me-2"></i>Xem lịch sử
                            </a>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div> 