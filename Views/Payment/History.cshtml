@model Zela.ViewModels.PaymentHistoryViewModel
@{
    ViewData["Title"] = "Lịch sử thanh toán";
}

<style>
    .history-container {
        background: linear-gradient(135deg, var(--theme-primary-color) 0%, var(--theme-primary-dark) 100%);
        min-height: 100vh;
        padding: 2rem 0;
    }
    .history-card {
        background: rgba(255,255,255,0.05);
        border: 1.5px solid var(--theme-accent-green);
        border-radius: 20px;
        box-shadow: var(--theme-shadow-neon);
        backdrop-filter: blur(10px);
        overflow: hidden;
        transition: all 0.3s;
    }
    .history-title {
        background: linear-gradient(45deg, var(--theme-accent-green), var(--theme-accent-green-alt));
        -webkit-background-clip: text;
        -webkit-text-fill-color: transparent;
        background-clip: text;
        font-weight: 800;
        font-size: 2.2rem;
        margin-bottom: 1rem;
        text-shadow: var(--theme-shadow-neon);
    }
    .history-badge {
        border-radius: 10px;
        font-weight: 600;
        padding: 0.4rem 1rem;
        font-size: 1rem;
    }
    .history-badge.success {
        background: rgba(0,240,181,0.1);
        color: var(--theme-status-online);
        border: 1px solid var(--theme-status-online);
    }
    .history-badge.warning {
        background: rgba(255, 193, 7, 0.1);
        color: #ffc107;
        border: 1px solid #ffc107;
    }
    .history-badge.danger {
        background: rgba(255, 90, 87, 0.1);
        color: var(--theme-accent-red);
        border: 1px solid var(--theme-accent-red);
    }
    .history-badge.secondary {
        background: #eee;
        color: #888;
        border: 1px solid #ccc;
    }
    .history-btn {
        background: linear-gradient(45deg, var(--theme-accent-green), var(--theme-accent-green-alt));
        border: none;
        border-radius: 15px;
        padding: 0.75rem 1.5rem;
        font-weight: 600;
        font-size: 1.1rem;
        transition: all 0.3s;
        text-transform: uppercase;
        letter-spacing: 0.5px;
        color: #fff;
    }
    .history-btn-outline {
        background: transparent;
        border: 2px solid var(--theme-accent-green);
        color: var(--theme-accent-green);
    }
    .history-btn-outline:hover {
        background: var(--theme-accent-green);
        color: var(--theme-text-dark);
    }
    .history-btn:hover {
        box-shadow: var(--theme-shadow-neon);
        background: linear-gradient(45deg, var(--theme-accent-green-alt), var(--theme-accent-green));
    }
</style>

<div class="container mt-5">
    <div class="row">
        <div class="col-lg-8">
            <div class="card shadow">
                <div class="card-header bg-primary text-white">
                    <h4 class="mb-0">
                        <i class="bi bi-clock-history me-2"></i>Lịch sử thanh toán
                    </h4>
                </div>
                <div class="card-body">
                    @if (Model.Transactions.Any())
                    {
                        <div class="table-responsive">
                            <table class="table table-hover">
                                <thead>
                                    <tr>
                                        <th>Mã đơn hàng</th>
                                        <th>Số tiền</th>
                                        <th>Trạng thái</th>
                                        <th>Ngày tạo</th>
                                        <th>Mô tả</th>
                                    </tr>
                                </thead>
                                <tbody>
                                    @foreach (var transaction in Model.Transactions)
                                    {
                                        <tr>
                                            <td>
                                                <code>@transaction.PayOSOrderCode</code>
                                            </td>
                                            <td>
                                                <span class="fw-bold text-primary">
                                                    @transaction.Amount.ToString("N0") VNĐ
                                                </span>
                                            </td>
                                            <td>
                                                @{
                                                    var statusClass = transaction.Status switch
                                                    {
                                                        "Success" => "success",
                                                        "Pending" => "warning",
                                                        "Failed" => "danger",
                                                        _ => "secondary"
                                                    };
                                                    var statusText = transaction.Status switch
                                                    {
                                                        "Success" => "Thành công",
                                                        "Pending" => "Đang xử lý",
                                                        "Failed" => "Thất bại",
                                                        _ => transaction.Status
                                                    };
                                                }
                                                <span class="badge bg-@statusClass">@statusText</span>
                                            </td>
                                            <td>@transaction.CreatedAt.ToString("dd/MM/yyyy HH:mm")</td>
                                            <td>@transaction.Description</td>
                                        </tr>
                                    }
                                </tbody>
                            </table>
                        </div>
                    }
                    else
                    {
                        <div class="text-center py-5">
                            <i class="bi bi-inbox text-muted" style="font-size: 3rem;"></i>
                            <h5 class="text-muted mt-3">Chưa có lịch sử thanh toán</h5>
                            <p class="text-muted">Bạn chưa thực hiện giao dịch thanh toán nào.</p>
                            <a href="@Url.Action("Plans", "Payment")" class="btn btn-primary">
                                <i class="bi bi-crown me-2"></i>Nâng cấp Premium
                            </a>
                        </div>
                    }
                </div>
            </div>
        </div>
        
        <div class="col-lg-4">
            <!-- Current Subscription Status -->
            <div class="card shadow mb-4">
                <div class="card-header bg-success text-white">
                    <h5 class="mb-0">
                        <i class="bi bi-crown me-2"></i>Trạng thái Premium
                    </h5>
                </div>
                <div class="card-body">
                    @if (Model.CurrentSubscription != null)
                    {
                        <div class="text-center mb-3">
                            <i class="bi bi-crown-fill text-warning" style="font-size: 2rem;"></i>
                            <h5 class="text-success mt-2">Đang sử dụng Premium</h5>
                        </div>
                        
                        <div class="row text-center">
                            <div class="col-6">
                                <small class="text-muted">Bắt đầu</small>
                                <div class="fw-bold">@Model.CurrentSubscription.StartDate.ToString("dd/MM/yyyy")</div>
                            </div>
                            <div class="col-6">
                                <small class="text-muted">Hết hạn</small>
                                <div class="fw-bold">@Model.CurrentSubscription.EndDate.ToString("dd/MM/yyyy")</div>
                            </div>
                        </div>
                        
                        var daysLeft = (Model.CurrentSubscription.EndDate - DateTime.Now).Days;
                        var totalDays = (Model.CurrentSubscription.EndDate - Model.CurrentSubscription.StartDate).Days;
                        var remainingDays = (Model.CurrentSubscription.EndDate - DateTime.Now).TotalDays;
                        var progressPercent = totalDays > 0 ? (remainingDays / totalDays) * 100 : 0;
                        
                        <div class="mt-3">
                            <div class="d-flex justify-content-between mb-1">
                                <small>Thời gian còn lại</small>
                                <small class="fw-bold">@daysLeft ngày</small>
                            </div>
                            <div class="progress">
                                <div class="progress-bar bg-success" 
                                     style="width: @(Math.Max(0, Math.Min(100, progressPercent)))%"></div>
                            </div>
                        </div>
                        
                        @if (daysLeft <= 7)
                        {
                            <div class="alert alert-warning mt-3">
                                <i class="bi bi-exclamation-triangle me-2"></i>
                                <strong>Gói Premium sắp hết hạn!</strong>
                                <br>Vui lòng gia hạn để tiếp tục sử dụng.
                            </div>
                        }
                    }
                    else
                    {
                        <div class="text-center">
                            <i class="bi bi-person text-muted" style="font-size: 2rem;"></i>
                            <h6 class="text-muted mt-2">Tài khoản thường</h6>
                            <p class="text-muted small">Bạn chưa có gói Premium</p>
                            <a href="@Url.Action("Plans", "Payment")" class="btn btn-primary btn-sm">
                                <i class="bi bi-crown me-1"></i>Nâng cấp ngay
                            </a>
                        </div>
                    }
                </div>
            </div>
            
            <!-- Quick Actions -->
            <div class="card shadow">
                <div class="card-header bg-primary text-white">
                    <h5 class="mb-0">
                        <i class="bi bi-lightning me-2"></i>Thao tác nhanh
                    </h5>
                </div>
                <div class="card-body">
                    <div class="d-grid gap-2">
                        <a href="@Url.Action("Plans", "Payment")" class="btn btn-primary">
                            <i class="bi bi-crown me-2"></i>Nâng cấp Premium
                        </a>
                        <a href="@Url.Action("Index", "Home")" class="btn btn-outline-secondary">
                            <i class="bi bi-house me-2"></i>Về trang chủ
                        </a>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div> 