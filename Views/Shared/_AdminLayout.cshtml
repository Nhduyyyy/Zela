@inherits Microsoft.AspNetCore.Mvc.Razor.RazorPage<dynamic>
<!DOCTYPE html>
<html lang="vi">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1" />
    <title>@ViewData["Title"] - Zela Admin</title>

    <!-- Fonts -->
    <link rel="preconnect" href="https://fonts.googleapis.com">
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
    <link href="https://fonts.googleapis.com/css2?family=Inter:wght@300;400;500;600;700;800&display=swap" rel="stylesheet">
    
    <!-- Bootstrap CSS -->
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <!-- Bootstrap Icons -->
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.3/font/bootstrap-icons.min.css" />
    
    <!-- Admin CSS -->
    <link rel="stylesheet" href="~/css/admin.css" />
    @RenderSection("Styles", required: false)
</head>
<body>
    <div class="admin-wrapper">
        <!-- Sidebar -->
        <nav id="sidebar" class="sidebar">
            <!-- Sidebar Header -->
            <div class="sidebar-header">
                <a href="#" class="logo">
                    <i class="bi bi-lightning-charge-fill"></i>
                    <span class="logo-text">Zela Admin</span>
                </a>
            </div>

            <!-- Navigation Menu -->
            <ul class="nav flex-column">
                <li class="nav-item">
                    <a asp-action="Index" class="nav-link @(ViewContext.RouteData.Values["Action"].ToString() == "Index" ? "active" : "")">
                        <i class="bi bi-speedometer2"></i>
                        <span class="link-text">Dashboard</span>
                    </a>
                </li>
                <li class="nav-item">
                    <a asp-action="Users" class="nav-link @(ViewContext.RouteData.Values["Action"].ToString() == "Users" ? "active" : "")">
                        <i class="bi bi-people-fill"></i>
                        <span class="link-text">Quản lý User</span>
                    </a>
                </li>
                <li class="nav-item">
                    <a href="#" class="nav-link">
                        <i class="bi bi-chat-dots-fill"></i>
                        <span class="link-text">Chat Groups</span>
                    </a>
                </li>
                <li class="nav-item">
                    <a href="#" class="nav-link">
                        <i class="bi bi-camera-video-fill"></i>
                        <span class="link-text">Video Rooms</span>
                    </a>
                </li>
                <li class="nav-item">
                    <a href="#" class="nav-link">
                        <i class="bi bi-bar-chart-fill"></i>
                        <span class="link-text">Analytics</span>
                    </a>
                </li>
                <li class="nav-item">
                    <a href="#" class="nav-link">
                        <i class="bi bi-gear-fill"></i>
                        <span class="link-text">Cài đặt</span>
                    </a>
                </li>
            </ul>
        </nav>

        <!-- Main Content -->
        <div class="content">
            <!-- Top Navigation -->
            <nav class="top-navbar">
                <div class="container-fluid admin-d-flex admin-align-center admin-justify-between">
                    <div class="admin-d-flex admin-align-center admin-gap-md">
                        <button id="toggleSidebar" class="toggle-sidebar-btn">
                            <i class="bi bi-list"></i>
                        </button>
                        
                        <div class="admin-breadcrumb">
                            <span class="admin-text-secondary">Admin Panel</span>
                            <i class="bi bi-chevron-right admin-text-light"></i>
                            <span class="admin-text-primary">@ViewData["Title"]</span>
                        </div>
                    </div>

                    <div class="admin-user-info">
                        <div class="admin-d-flex admin-align-center admin-gap-sm">
                            <img src="@(Context.Session.GetString("AvatarUrl") ?? "/images/default-avatar.jpeg")" 
                                 alt="Admin Avatar" 
                                 class="admin-user-avatar">
                            <div>
                                <div class="admin-user-name">@(Context.Session.GetString("FullName") ?? "Admin")</div>
                                <small class="admin-text-secondary">Administrator</small>
                            </div>
                        </div>
                        
                        <form asp-controller="Account" asp-action="Logout" method="post" class="d-inline">
                            @Html.AntiForgeryToken()
                            <button type="submit" class="admin-logout-btn">
                                <i class="bi bi-box-arrow-right"></i>
                                Đăng xuất
                            </button>
                        </form>
                    </div>
                </div>
            </nav>

            <!-- Main Content Area -->
            <main class="admin-main">
                <div class="admin-page-header admin-animate-fade-in">
                    <h1 class="admin-page-title">@ViewData["Title"]</h1>
                    <p class="admin-page-subtitle">Quản lý và giám sát hệ thống Zela</p>
                </div>

                <div class="admin-animate-slide-in">
                    @RenderBody()
                </div>
            </main>

            <!-- Footer -->
            <footer class="admin-footer">
                <div class="admin-d-flex admin-align-center admin-justify-between">
                    <div>
                        © @DateTime.Now.Year <strong>Zela Admin Panel</strong>. Tất cả quyền được bảo lưu.
                    </div>
                    <div class="admin-d-flex admin-align-center admin-gap-md">
                        <span class="admin-text-secondary">Phiên bản 2.0.0</span>
                        <span class="admin-text-light">|</span>
                        <a href="#" class="admin-text-secondary">Hỗ trợ</a>
                    </div>
                </div>
            </footer>
        </div>
    </div>

    <!-- Scripts -->
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script>
        // Toggle Sidebar
        document.getElementById('toggleSidebar').addEventListener('click', function () {
            const sidebar = document.getElementById('sidebar');
            sidebar.classList.toggle('collapsed');
            
            // Save state to localStorage
            localStorage.setItem('sidebarCollapsed', sidebar.classList.contains('collapsed'));
        });

        // Restore sidebar state
        document.addEventListener('DOMContentLoaded', function() {
            const isCollapsed = localStorage.getItem('sidebarCollapsed') === 'true';
            if (isCollapsed) {
                document.getElementById('sidebar').classList.add('collapsed');
            }
        });

        // Mobile responsive
        function handleResize() {
            const sidebar = document.getElementById('sidebar');
            if (window.innerWidth <= 768) {
                sidebar.classList.add('collapsed');
            }
        }

        window.addEventListener('resize', handleResize);
        handleResize(); // Initial check
    </script>
    
    @RenderSection("Scripts", required: false)
</body>
</html> 