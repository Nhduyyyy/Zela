                </li>
            </ul>
        </nav>

        <!-- Main Content -->
        <div class="content admin-main-content">
            <!-- Top Navigation -->
            <nav class="top-navbar">
                <div class="container-fluid admin-d-flex admin-align-center admin-justify-between">
                    <div class="admin-d-flex admin-align-center admin-gap-md">
                        <button id="toggleSidebar" class="toggle-sidebar-btn">
                            <i class="bi bi-list"></i>
                        </button>
                        
                        <div class="admin-breadcrumb">
                            <span class="admin-text-secondary">Admin Panel</span>
                            <i class="bi bi-chevron-right admin-text-light"></i>
