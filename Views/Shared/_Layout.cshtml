@{
    Layout = null;
}
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8"/>
    <meta name="viewport" content="width=device-width, initial-scale=1.0"/>
    <title>@ViewData["Title"] - Zela</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css"/>
    <link rel="stylesheet" href="~/css/sidebar-1.css"/>
    <link rel="stylesheet" href="~/css/video-call-popup.css" />
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons/font/bootstrap-icons.css"/>
    @RenderSection("Styles", required: false) @* 🟡 đoạn này quan trọng *@
</head>
<body style="margin:0;">
<!-- SIDEBAR ZELA -->
<div class="zela-layout">
    <aside class="zela-sidebar">
        <div class="zela-logo">ZELA</div>
        <nav class="zela-nav">
            <ul>
                <li>
                    <a class="nav-link" asp-controller="Profile" asp-action="Index"><i class="bi bi-person"></i><span>Profile</span></a>
                </li>
                <li>
                    <a class="nav-link" asp-controller="Chat" asp-action="Index"><i class="bi bi-chat-dots"></i><span>Chat</span></a>
                </li>
                <li>
                    <a class="nav-link" asp-controller="Friendship" asp-action="Index"><i class="bi bi-camera-video"></i><span>Friendship</span></a>
                </li>
                <li>
                    <a class="nav-link" asp-controller="Video" asp-action="Index"><i class="bi bi-camera-video"></i><span>Video Call</span></a>
                </li>
                <li>
                    <a class="nav-link" asp-controller="Whiteboard" asp-action="Index"><i class="bi bi-easel"></i><span>Whiteboard</span></a>
                </li>
                <li>
                    <a class="nav-link" asp-controller="Quiz" asp-action="Index"><i class="bi bi-ui-checks"></i><span>Quiz</span></a>
                </li>
                <li>
                    <a class="nav-link" asp-controller="Calendar" asp-action="Index"><i class="bi bi-calendar-week"></i><span>Calendar</span></a>
                </li>
                <li>
                    <a class="nav-link" asp-controller="AI" asp-action="Index"><i class="bi bi-stars"></i><span>AI Assistant</span></a>
                </li>
                <li>
                    <a class="nav-link" asp-controller="Admin" asp-action="Index"><i class="bi bi-graph-up"></i><span>Analytics</span></a>
                </li>
                <li>
                    <a class="nav-link" asp-controller="SystemLog" asp-action="Index"><i class="bi bi-clipboard-data"></i><span>System Logs</span></a>
                </li>
            </ul>
        </nav>
        <div class="zela-footer">
            <a href="#"><i class="bi bi-gear" title="Cài đặt"></i></a>
            <form asp-controller="Account" asp-action="Logout" method="post">
                @Html.AntiForgeryToken()
                <button type="submit" class="logout-btn" title="Đăng xuất">
                    <i class="bi bi-box-arrow-right"></i>
                </button>
            </form>
        </div>
    </aside>

    <!-- MAIN CONTENT -->
    <main class="zela-main">
         @RenderBody()
    </main>
</div>

<!-- Scripts -->
<script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>

    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>

    <!-- 2. Microsoft SignalR (CDN CHUẨN, import đầu tiên) -->
    <script src="https://cdn.jsdelivr.net/npm/@@microsoft/signalr@7.0.5/dist/browser/signalr.min.js"></script>
    
    <script src="~/js/video-call-popup.js"></script>

    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
