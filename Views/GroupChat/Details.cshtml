    @model Zela.Models.ChatGroup

@{
    ViewData["Title"] = Model.Name;
}

<div class="container-fluid">
    <div class="row">
        <!-- Danh sách thành viên -->
        <div class="col-md-3">
            <div class="card">
                <div class="card-header">
                    <h5 class="mb-0">Thành viên (@(Model.Members?.Count ?? 0))</h5>
                </div>
                <div class="list-group list-group-flush">
                    @if (Model.Members != null)
                    {
                        @foreach (var member in Model.Members)
                        {
                            <div class="list-group-item">
                                <div class="d-flex align-items-center">
                                    <img src="@member.User.AvatarUrl" class="rounded-circle me-2" width="32" height="32">
                                    <div>
                                        <h6 class="mb-0">@member.User.FullName</h6>
                                        <small class="text-muted">
                                            @(member.IsModerator ? "Quản trị viên" : "Thành viên")
                                        </small>
                                    </div>
                                    @if (Model.CreatorId == member.UserId)
                                    {
                                        <span class="badge bg-primary ms-auto">Chủ nhóm</span>
                                    }
                                </div>
                            </div>
                        }
                    }
                </div>
            </div>
        </div>

        <!-- Khu vực chat -->
        <div class="col-md-9">
            <div class="card">
                <div class="card-header">
                    <h5 class="mb-0">@Model.Name</h5>
                    <small class="text-muted">@Model.Description</small>
                </div>
                <div class="card-body">
                    <div id="chatMessages" class="chat-messages">
                        <!-- Tin nhắn sẽ được load ở đây -->
                    </div>
                </div>
                <div class="card-footer">
                    <form id="messageForm" class="d-flex">
                        <input type="text" class="form-control me-2" id="messageInput" placeholder="Nhập tin nhắn...">
                        <button type="submit" class="btn btn-primary">Gửi</button>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>

<!-- Hidden elements to store data -->
<div data-group-id="@Model.GroupId" style="display: none;"></div>
<div data-current-user-id="@(Context.Session.GetInt32("UserId") ?? 0)" style="display: none;"></div>

@section Scripts {
    <script src="~/lib/microsoft/signalr/dist/browser/signalr.js"></script>
    <script src="~/js/group-chat-window.js"></script>
} 