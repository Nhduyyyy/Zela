@model Zela.ViewModels.QuizEditViewModel
@{
    ViewData["Title"] = "Chỉnh sửa Quiz";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

@section Styles {
    <link rel="stylesheet" href="~/css/pages/quiz/quiz-index.css"/>
}

<div class="quiz-window">
    <!-- Quiz Header -->
    <div class="quiz-header">
        <div class="quiz-header-left">
            <h2 class="quiz-title">
                <i class="bi bi-pencil-square me-2"></i>
                Chỉnh sửa Quiz
            </h2>
        </div>
        
        <div class="quiz-header-right">
            <a href="@Url.Action("Index", "Quiz")" class="btn btn-outline-secondary me-2">
                <i class="bi bi-arrow-left me-1"></i>
                Quay lại
            </a>
            <button type="submit" form="editQuizForm" class="btn btn-primary">
                <i class="bi bi-check-circle me-1"></i>
                Lưu thay đổi
            </button>
        </div>
    </div>

    <!-- Quiz Content -->
    <div class="quiz-content">
        <!-- Validation Errors -->
        @if (!ViewData.ModelState.IsValid)
        {
            <div class="alert alert-danger">
                <h5>Lỗi xác thực:</h5>
                <ul>
                    @foreach (var modelState in ViewData.ModelState.Values)
                    {
                        foreach (var error in modelState.Errors)
                        {
                            <li>@error.ErrorMessage</li>
                        }
                    }
                </ul>
            </div>
        }

        <div class="row">
            <div class="col-lg-8">
                <!-- Edit Form -->
                <div class="card" style="background: var(--quiz-bg-card); border: 1px solid var(--quiz-border-primary);">
                    <div class="card-header" style="background: var(--quiz-bg-card); border-bottom: 1px solid var(--quiz-border-primary);">
                        <h5 class="card-title mb-0" style="color: var(--quiz-text-primary);">
                            <i class="bi bi-info-circle me-2"></i>
                            Thông tin Quiz
                        </h5>
                    </div>
                    <div class="card-body">
                        <form id="editQuizForm" asp-action="Edit" method="post">
                            <input type="hidden" asp-for="QuizId" />
                            <input type="hidden" asp-for="CreatorId" />
                            <input type="hidden" asp-for="CreatedAt" />
                            
                            <div class="mb-3">
                                <label asp-for="Title" class="form-label" style="color: var(--quiz-text-primary); font-weight: 500;">
                                    Tiêu đề Quiz <span class="text-danger">*</span>
                                </label>
                                <input asp-for="Title" type="text" class="form-control" required 
                                       style="background: var(--quiz-bg-input); border: 1px solid var(--quiz-border-primary); color: var(--quiz-text-primary);">
                                <span asp-validation-for="Title" class="text-danger"></span>
                            </div>
                            
                            <div class="mb-3">
                                <label asp-for="Description" class="form-label" style="color: var(--quiz-text-primary); font-weight: 500;">
                                    Mô tả
                                </label>
                                <textarea asp-for="Description" class="form-control" rows="4" 
                                          style="background: var(--quiz-bg-input); border: 1px solid var(--quiz-border-primary); color: var(--quiz-text-primary); resize: vertical;"></textarea>
                                <span asp-validation-for="Description" class="text-danger"></span>
                            </div>
                            
                            <div class="mb-3">
                                <label asp-for="TimeLimit" class="form-label" style="color: var(--quiz-text-primary); font-weight: 500;">
                                    Thời gian làm bài (phút)
                                </label>
                                <input asp-for="TimeLimit" type="number" class="form-control" min="0" max="300" 
                                       style="background: var(--quiz-bg-input); border: 1px solid var(--quiz-border-primary); color: var(--quiz-text-primary);">
                                <span asp-validation-for="TimeLimit" class="text-danger"></span>
                                <small class="form-text" style="color: var(--quiz-text-secondary);">Để trống hoặc 0 nếu không giới hạn thời gian</small>
                            </div>
                        </form>
                    </div>
                </div>
            </div>
            
            <div class="col-lg-4">
                <!-- Quiz Info -->
                <div class="card mb-3" style="background: var(--quiz-bg-card); border: 1px solid var(--quiz-border-primary);">
                    <div class="card-header" style="background: var(--quiz-bg-card); border-bottom: 1px solid var(--quiz-border-primary);">
                        <h6 class="card-title mb-0" style="color: var(--quiz-text-primary);">
                            <i class="bi bi-info-circle me-2"></i>
                            Thông tin
                        </h6>
                    </div>
                    <div class="card-body">
                        <div class="d-flex align-items-center mb-2">
                            <i class="bi bi-calendar3 me-2" style="color: var(--quiz-secondary);"></i>
                            <span style="color: var(--quiz-text-secondary);">Tạo lúc:</span>
                            <span class="ms-auto" style="color: var(--quiz-text-primary);">@Model.CreatedAt.ToString("dd/MM/yyyy HH:mm")</span>
                        </div>
                        <div class="d-flex align-items-center mb-2">
                            <i class="bi bi-person me-2" style="color: var(--quiz-secondary);"></i>
                            <span style="color: var(--quiz-text-secondary);">Tác giả:</span>
                            <span class="ms-auto" style="color: var(--quiz-text-primary);">@(Model.CreatorName ?? "Unknown")</span>
                        </div>
                        <div class="d-flex align-items-center mb-2">
                            <i class="bi bi-list-check me-2" style="color: var(--quiz-secondary);"></i>
                            <span style="color: var(--quiz-text-secondary);">Số câu hỏi:</span>
                            <span class="ms-auto" style="color: var(--quiz-text-primary);">@Model.QuestionCount</span>
                        </div>
                        <div class="d-flex align-items-center">
                            <i class="bi bi-clock me-2" style="color: var(--quiz-secondary);"></i>
                            <span style="color: var(--quiz-text-secondary);">Thời gian:</span>
                            <span class="ms-auto" style="color: var(--quiz-text-primary);">@(Model.TimeLimit > 0 ? $"{Model.TimeLimit} phút" : "Không giới hạn")</span>
                        </div>
                    </div>
                </div>
                
                <!-- Quick Actions -->
                <div class="card" style="background: var(--quiz-bg-card); border: 1px solid var(--quiz-border-primary);">
                    <div class="card-header" style="background: var(--quiz-bg-card); border-bottom: 1px solid var(--quiz-border-primary);">
                        <h6 class="card-title mb-0" style="color: var(--quiz-text-primary);">
                            <i class="bi bi-lightning me-2"></i>
                            Thao tác nhanh
                        </h6>
                    </div>
                    <div class="card-body">
                        <div class="d-grid gap-2">
                            <a href="@Url.Action("AddQuestions", "Quiz", new { id = Model.QuizId })" class="btn btn-outline-primary btn-sm">
                                <i class="bi bi-plus-circle me-1"></i>
                                Thêm câu hỏi
                            </a>
                            <a href="@Url.Action("Details", "Quiz", new { id = Model.QuizId })" class="btn btn-outline-info btn-sm">
                                <i class="bi bi-eye me-1"></i>
                                Xem chi tiết
                            </a>
                            <button type="button" class="btn btn-outline-warning btn-sm" onclick="previewQuiz(@Model.QuizId)">
                                <i class="bi bi-play-circle me-1"></i>
                                Xem trước
                            </button>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
    <script src="~/js/quiz-index.js"></script>
    <script>
        // Preview quiz function
        function previewQuiz(quizId) {
            window.open(`/Quiz/Details/${quizId}?preview=true`, '_blank');
        }
        
        // Form validation and submission
        $(document).ready(function() {
            $('#editQuizForm').on('submit', function(e) {
                const title = $('#Title').val().trim();
                if (!title) {
                    e.preventDefault();
                    alert('Vui lòng nhập tiêu đề quiz');
                    $('#Title').focus();
                    return false;
                }
                
                // Disable submit button to prevent double submission
                $('button[type="submit"]').prop('disabled', true);
            });
            
            // Re-enable button if form validation fails
            $('#editQuizForm').on('invalid', function() {
                $('button[type="submit"]').prop('disabled', false);
            });
        });
    </script>
} 