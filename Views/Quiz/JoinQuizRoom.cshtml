@{
    ViewData["Title"] = "Tham gia phòng Quiz";
}
<div class="container" style="max-width:400px;margin:2rem auto;">
    <h2>Tham gia phòng Quiz</h2>
    <form method="get" action="@Url.Action("QuizRealtime", "Quiz")">
        <div class="form-group">
            <label for="displayName">Tên hiển thị của bạn:</label>
            <input type="text" name="displayName" id="displayName" class="form-control" maxlength="30" required />
        </div>
        <div class="form-group">
            <label for="roomCode">Mã phòng:</label>
            <input type="text" name="roomCode" id="roomCode" class="form-control" maxlength="10" required />
        </div>
        <button type="submit" class="btn btn-success mt-2">Tham gia</button>
    </form>
</div> 