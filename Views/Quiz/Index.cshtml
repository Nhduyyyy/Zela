@model List<Zela.ViewModels.QuizzesViewModel>
@{
    ViewData["Title"] = "Quiz";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

@section Styles {
    <link rel="stylesheet" href="~/css/pages/quiz/quiz-index.css"/>
}

<section class="quiz-window">
    <!-- Quiz Header với các tác vụ -->
    <div class="quiz-header">
        <div class="quiz-header-left">
            <h2 class="quiz-title">
                <i class="bi bi-ui-checks me-2"></i>
                Quiz Sets
            </h2>
            <div class="quiz-search-container">
                <div class="search-box">
                    <i class="bi bi-search search-icon"></i>
                    <input type="text" id="quiz-search" placeholder="Tìm kiếm quiz..." class="search-input">
                </div>
            </div>
        </div>
        
        <div class="quiz-header-right">
            @if (Context.Session.GetInt32("UserId") != null)
            {
                <a href="@Url.Action("Create", "Quiz")" class="btn btn-outline-primary me-2">
                    <i class="bi bi-plus-circle me-1"></i>
                    Tạo Quiz
                </a>
                <button class="btn btn-outline-success me-2" onclick="showUpgradeModal()">
                    <i class="bi bi-crown me-1"></i>
                    Upgrade
                </button>
            }
            else
            {
                <a href="@Url.Action("Login", "Account")" class="btn btn-outline-primary me-2">
                    <i class="bi bi-google me-1"></i>
                    Đăng nhập để tạo Quiz
                </a>
            }
            <div class="quiz-stats">
                <span class="stat-item">
                    <i class="bi bi-collection me-1"></i>
                    @Model.Count sets
                </span>
            </div>
        </div>
    </div>

    <div class="quiz-header-actions" style="margin-bottom:1.5rem;">
        <a href="@Url.Action("JoinQuizRoom", "Quiz")" class="btn btn-primary">
            <i class="bi bi-box-arrow-in-right"></i> Tham gia phòng Quiz
        </a>
    </div>

    <!-- Quiz Content -->
    <div class="quiz-content">
        <!-- Notifications -->
        @if (TempData["SuccessMessage"] != null)
        {
            <div class="alert alert-success alert-dismissible fade show" role="alert" style="background: var(--quiz-success); border: none; color: white;">
                <i class="bi bi-check-circle me-2"></i>
                @TempData["SuccessMessage"]
                <button type="button" class="btn-close btn-close-white" data-bs-dismiss="alert"></button>
            </div>
        }
        
        @if (TempData["ErrorMessage"] != null)
        {
            <div class="alert alert-danger alert-dismissible fade show" role="alert" style="background: var(--quiz-accent); border: none; color: white;">
                <i class="bi bi-exclamation-triangle me-2"></i>
                @TempData["ErrorMessage"]
                <button type="button" class="btn-close btn-close-white" data-bs-dismiss="alert"></button>
            </div>
        }
        
        <!-- Recent Section -->
        <div class="quiz-section">
            <div class="section-header">
                <h3 class="section-title">
                    <i class="bi bi-clock-history me-2"></i>
                    Gần đây
                </h3>
                <a href="#" class="view-all-link">Xem tất cả <i class="bi bi-arrow-right"></i></a>
            </div>
            
            <div class="quiz-grid">
                @if (Model != null && Model.Any())
                {
                    @foreach (var quiz in Model.Take(6))
                    {
                        <div class="quiz-card" onclick="location.href='@Url.Action("Details", "Quiz", new { id = quiz.QuizId })'">
                            <div class="quiz-card-header">
                                <div class="quiz-icon">
                                    <i class="bi bi-ui-checks"></i>
                                </div>
                                @if (Context.Session.GetInt32("UserId") != null)
                                {
                                    <div class="quiz-actions">
                                        <button class="btn-edit" onclick="event.stopPropagation(); editQuiz(@quiz.QuizId)">
                                            <i class="bi bi-pencil"></i>
                                        </button>
                                        <button class="btn-delete" onclick="event.stopPropagation(); deleteQuiz(@quiz.QuizId)">
                                            <i class="bi bi-trash"></i>
                                        </button>
                                    </div>
                                }
                            </div>
                            <div class="quiz-card-body">
                                <h4 class="quiz-card-title">@quiz.Title</h4>
                                <p class="quiz-card-desc">@quiz.Description</p>
                                <div class="quiz-card-meta">
                                    <span class="quiz-terms">
                                        <i class="bi bi-list-check me-1"></i>
                                        @quiz.TermCount terms
                                    </span>
                                    <span class="quiz-author">
                                        <i class="bi bi-person me-1"></i>
                                        @quiz.Author
                                    </span>
                                </div>
                            </div>
                            <div class="quiz-card-footer">
                                @if (Context.Session.GetInt32("UserId") != null)
                                {
                                    <a href="@Url.Action("Take", "Quiz", new { id = quiz.QuizId })" class="btn btn-primary btn-sm">
                                        <i class="bi bi-play me-1"></i>
                                        Bắt đầu
                                    </a>
                                    <button class="btn btn-outline-secondary btn-sm" onclick="event.stopPropagation(); viewDetails(@quiz.QuizId)">
                                        <i class="bi bi-eye me-1"></i>
                                        Chi tiết
                                    </button>
                                    <button class="btn btn-outline-info btn-sm" onclick="event.stopPropagation(); addQuestions(@quiz.QuizId)">
                                        <i class="bi bi-plus-circle me-1"></i>
                                        Thêm câu hỏi
                                    </button>
                                }
                                else
                                {
                                    <a href="@Url.Action("Login", "Account")" class="btn btn-primary btn-sm">
                                        <i class="bi bi-google me-1"></i>
                                        Đăng nhập để làm bài
                                    </a>
                                    <button class="btn btn-outline-secondary btn-sm" onclick="event.stopPropagation(); viewDetails(@quiz.QuizId)">
                                        <i class="bi bi-eye me-1"></i>
                                        Chi tiết
                                    </button>
                                }
                            </div>
                        </div>
                    }
                }
                else
                {
                    <div class="quiz-card empty-card">
                        @if (Context.Session.GetInt32("UserId") != null)
                        {
                            <div class="empty-card-content" onclick="location.href='@Url.Action("Create", "Quiz")'">
                                <i class="bi bi-plus-circle fs-1 text-muted"></i>
                                <h4 class="mt-3">Tạo Quiz đầu tiên</h4>
                                <p class="text-muted">Bắt đầu tạo quiz để học tập hiệu quả hơn</p>
                            </div>
                        }
                        else
                        {
                            <div class="empty-card-content" onclick="location.href='@Url.Action("Login", "Account")'">
                                <i class="bi bi-google fs-1 text-muted"></i>
                                <h4 class="mt-3">Đăng nhập để tạo Quiz</h4>
                                <p class="text-muted">Bạn cần đăng nhập để tạo và quản lý quiz</p>
                            </div>
                        }
                    </div>
                }
            </div>
        </div>

        <!-- Recommended Section -->
        <div class="quiz-section">
            <div class="section-header">
                <h3 class="section-title">
                    <i class="bi bi-star me-2"></i>
                    Đề xuất cho bạn
                </h3>
                <!-- Có thể giữ lại section-nav nếu muốn phân trang -->
            </div>
            <div class="quiz-grid">
                @if (Model != null && Model.Any())
                {
                    @foreach (var quiz in Model.Take(6))
                    {
                        <div class="quiz-card" onclick="location.href='@Url.Action("Details", "Quiz", new { id = quiz.QuizId })'">
                            <div class="quiz-card-header">
                                <div class="quiz-icon">
                                    <i class="bi bi-star"></i>
                                </div>
                            </div>
                            <div class="quiz-card-body">
                                <h4 class="quiz-card-title">@quiz.Title</h4>
                                <p class="quiz-card-desc">@quiz.Description</p>
                                <div class="quiz-card-meta">
                                    <span class="quiz-terms">
                                        <i class="bi bi-list-check me-1"></i>
                                        @quiz.TermCount terms
                                    </span>
                                    <span class="quiz-author">
                                        <i class="bi bi-person me-1"></i>
                                        @quiz.Author
                                    </span>
                                </div>
                            </div>
                            <div class="quiz-card-footer">
                                <a href="@Url.Action("Take", "Quiz", new { id = quiz.QuizId })" class="btn btn-primary btn-sm">
                                    <i class="bi bi-play me-1"></i>
                                    Bắt đầu
                                </a>
                            </div>
                        </div>
                    }
                }
                else
                {
                    <div class="quiz-card empty-card">
                        <div class="empty-card-content">
                            <i class="bi bi-star fs-1 text-muted"></i>
                            <h4 class="mt-3">Chưa có quiz nào để đề xuất</h4>
                            <p class="text-muted">Hãy tạo quiz mới hoặc tìm kiếm quiz phù hợp</p>
                        </div>
                    </div>
                }
            </div>
        </div>
    </div>
</section>

@section Scripts {
    <script src="~/js/quiz-index.js"></script>
}