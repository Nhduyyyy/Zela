@{
    ViewData["Title"] = "Nhập mật khẩu Quiz";
    var quizId = ViewBag.QuizId;
    var passwordError = ViewBag.PasswordError as string;
}
<div class="container" style="max-width:400px;margin:3rem auto;">
    <h3 class="mb-3">Quiz này là riêng tư</h3>
    <form method="get" action="@Url.Action("Take", "Quiz")">
        <input type="hidden" name="id" value="@quizId" />
        <div class="mb-3">
            <label class="form-label">Nhập mật khẩu để làm bài</label>
            <input type="password" class="form-control" name="password" required />
        </div>
        @if (!string.IsNullOrEmpty(passwordError))
        {
            <div class="alert alert-danger">@passwordError</div>
        }
        <button type="submit" class="btn btn-primary">Xác nhận</button>
        <a href="@Url.Action("Index", "Quiz")" class="btn btn-secondary ms-2">Quay lại</a>
    </form>
</div> 